<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel"
  style="height: 100vh;background:rgba(0,0,0)">
  <div class="carousel-inner" style="height: 100vh;">
    <div class="carousel-item active" data-interval="5000">
      <div style="width: 100%; height: 100vh ;background-image: url(https://storage.googleapis.com/gcp-shop-image/hero-image.jpg)
        ;background-repeat: no-repeat ;background-size: contain ;background-position: center ;">
      </div>
      <div class="carousel-caption">
        <h1>WE'RE GETTING MARRIED!</h1>
        <p>敬泓 ❤ 雨伶</p>
      </div>
    </div>
    {{#each cards}}
    <div class="carousel-item" data-interval="5000">
      <div
        style="width: 100%; height: 100vh ;background-image: url(https://res.cloudinary.com/gingerhouse/image/upload/q_auto/{{this.imageId}}) ;background-repeat: no-repeat ;background-size: contain ;background-position: center ;">
      </div>
      <div class="carousel-caption" style="background:rgba(0,0,0,0.8)">
        <p>{{this.text}}</p>
        <h5>{{this.name}}</h5>
      </div>
    </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>